/* search.wxss */


.search-container {
    width: 100%
}
.search-main-container {
    width: 80%;
    height: 60px;
    margin: 50px auto 0 auto;
}

.search-main-container > input {
    padding-left: 15px;
    border: 1px solid #A52A2A;
    border-radius: 15px;
    font-size: 14px;
    color: #8E8E8E;
    font-family: "Arial", "Microsoft YaHei", "黑体", "宋体", sans-serif;
}

.search-recommend-container{
    width: 80%;
    height: 100px;
    margin: 0 auto;
}

.search-recommend-item {
    float: left;
    height: 20px;
    margin: 6px 8px;
    padding: 5px;
    line-height: 20px;
    font-size: 15px;
    color: white;
    font-family: "Arial", "Microsoft YaHei", "黑体", "宋体", sans-serif;
    border-radius: 3px;
}

.search-history-container {
    width: 80%;
    height: 60px;
    margin: 40px auto;
}

.search-history-title {
    width: 100%
}

.search-history-title > p {
    margin-left: 8px;
    font-size: 14px;
    color: #8E8E8E;
    font-family: "Arial", "Microsoft YaHei", "黑体", "宋体", sans-serif;
}

.search-history-item {
    display: flex;
    width: 100%;
    height: 20px;
    margin-top: 15px;
    justify-content: space-between;
    align-items: center;
}

.search-history-item > p {
    margin-left: 8px;
    font-size: 15px;
    color: #8E8E8E;
    font-family: "Arial", "Microsoft YaHei", "黑体", "宋体", sans-serif;
}

.search-history-item > image {
    width: 15px;
    height: 15px;
}