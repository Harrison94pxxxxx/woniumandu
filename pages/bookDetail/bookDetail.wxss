/* bookDetail.wxss */
.bookDetail-info-container {
  width: 94%;
  margin: 20px 3%;
}

.bookDetail-info-top {
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-self: center;
  width: 100%;
  height: 110px;
}

.bookDetail-header-cover {
  display: block;
  float: left;
  width: 90px;
  height: 110px;
}

.bookDetail-header-info-container{
  display: flex;
  float: left;
  height: 75px;
  margin-left: 10px;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-self: center;
}

.bookDetail-header-title {
  width: 100%;
  height: 25px;
  line-height: 25px;
  font-size: 14px;
  font-weight: bold;
  font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
}

.bookDetail-header-author {
  width: 100%;
  height: 25px;
  line-height: 25px;
  font-size: 12px;
  color: #FF7F24;
  font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
}

.bookDetail-header-info {
  width: 100%;
  height: 25px;
  line-height: 25px;
  font-size: 12px;
  color: 	#7F7F7F;
  font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
} 

.bookDetail-info-middle {
  display: flex;
  margin-top: 20px;
  padding-bottom: 20px;
  justify-content: space-between;
  align-self: center;
  width: 100%;
  height: 38px;
  border-bottom: 1px #DBDBDB solid;
}

.bookDetail-info-middle > button {
  width: 47%;
  margin: 0;
  border-radius: 3%;
  color: white;
  font-size: 16px;
  font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
}

.bookDetail-header-btn {
  background-color: #CD2626;
}

.bookDetail-info-bottom {
  display: flex;
  margin-top: 20px;
  padding-bottom: 20px;
  width: 100%;
  justify-content: space-around;
  align-self: center;
  border-bottom: 1px #DBDBDB solid;
}

.bookDetail-info-bottom > view {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  align-self: center;
}

.bookDetail-info-bottom-p1 {
  width: 100%;
  height: 18px;
  text-align: center;
  line-height: 18px;
  font-size: 12px;
  color: 	#7F7F7F;
  font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
}

.bookDetail-info-bottom-p2 {
  width: 100%;
  height: 18px;
  text-align: center;
  line-height: 18px;
  font-size: 14px;
  font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
}

.bookDetail-tags-container {
  display: flex;
  width: 94%;
  height: 20px;
  padding-bottom: 24px;
  justify-content: flex-start;
  align-self: center;
  margin: 0 3%;
  border-bottom: 1px #DBDBDB solid;
}

.bookDetail-tag {
  height: 25px;
  margin-right: 5px;
  padding: 0 5px;
  text-align: center;
  border-radius: 3px;
}

.bookDetail-tag > p {
  line-height: 25px;
  font-size: 12px;
  color: 	white;
  font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif; 
}

.bookDetail-longIntro-container {
  width: 94%;
  margin: 20px 3%;
  line-height: 16px;
  font-size: 13px;
  color: 	#7F7F7F;
  font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif; 
}

.bookDetaill-grid {
  width: 94%;
  height: 1px;
  margin: 10px 3%;
  background-color: #7F7F7F;
}

.follow {
    background: #CD2626;
}

.offFollow {
    background: #8B3A3A;
}