/* searchDetail.wxss */
.searchDetail-container {
    width: 100%;
    height: 100%;
    overflow-x: hidden;
}

.searchDetail-title {
    width: 100%;
    height: 60px;
}

.searchDetail-title > p {
  height: 60px;
  padding-left: 10px;
  line-height: 60px;
  font-size: 15px;
  color: #7F7F7F;
  font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
}

.searchDetail-item-container {
    width: 100%;
    background: #f5f2ed;
}

.searchDetail-item {
    width: 100%;
    height: 130px;
    justify-content: flex-start;
    align-self: center;
    align-items: center;
    align-content: center;
}

.searchDetail-item > image {
    position: absolute;
    display: block;
    width: 90px;
    height: 110px;
    margin-top: 10px;
    margin-left: 10px;
    border-radius: 5px;
}

.searchDetail-item-info {
    display: flex;
    height: 110px;
    width: 100%;
    padding-left: 110px;
    padding-top: 10px;
    justify-content: flex-start;
    align-self: center;
    flex-wrap: wrap;
}

.searchDetail-item-info-title {
    width: 100%;
    height: 27px;
    line-height: 27px;
    font-size: 15px;
    font-weight: bold;
    color: black;
    font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
    overflow: hidden;
}

.searchDetail-item-info-author {
    width: 100%;
    height: 22px;
    line-height: 22px;
    font-size: 14px;
    color: #7F7F7F;
    font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
    overflow: hidden;
}

.searchDetail-item-info-shortIntro {
    width: 300px;
    height: 22px;
    line-height: 22px;
    font-size: 14px;
    color: #7F7F7F;
    font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space:nowrap;

}

.searchDetail-item-info-renqi {
    width: 100%;
    height: 22px;
    line-height: 22px;
    font-size: 14px;
    color: black;
    font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
    text-overflow: ellipsis;
}