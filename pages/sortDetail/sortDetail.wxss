/* sortDetail.wxss */
.sortDetail-container {
    width: 100%;
    background-color: #f5f2ed;
    overflow-x: hidden;
}

.sortDetail-title-container {
    display: flex;
    height: 60px;
    white-space: nowrap;
    background-color: #fff;
    border-bottom: 1px solid #919191;
}

.sortDetail-title-item {
    display: inline-block;
    width: 100px;
    height: 60px;
    line-height: 60px;
}
.sortDetail-title-item > p {
    display: inline-block;
    width: 100%;
    height: 60px;
    line-height: 60px;
    text-align: center;
    font-size: 30rpx;
    font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
}

.sortDetail-item-container {
    width: 100%;
    background-color: #f5f2ed;
}

.sortDetail-item {
    width: 100%;
    height: 130px;
    justify-content: flex-start;
    align-self: center;
    align-items: center;
    align-content: center;
}

.sortDetail-item > image {
    position: absolute;
    display: block;
    width: 90px;
    height: 110px;
    margin-top: 10px;
    margin-left: 10px;
    border-radius: 5px;
}

.sortDetail-item-info {
    display: flex;
    height: 110px;
    width: 100%;
    padding-left: 110px;
    padding-top: 10px;
    justify-content: flex-start;
    align-self: center;
    flex-wrap: wrap;
}

.sortDetail-item-info-title {
    width: 100%;
    height: 27px;
    line-height: 27px;
    font-size: 30rpx;
    font-weight: bold;
    color: black;
    font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
    overflow: hidden;
}

.sortDetail-item-info-author {
    width: 100%;
    height: 22px;
    line-height: 22px;
    font-size: 28rpx;
    color: #7F7F7F;
    font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
    overflow: hidden;
}

.sortDetail-item-info-shortIntro {
    width: 550rpx;
    height: 22px;
    line-height: 22px;
    font-size: 28rpx;
    color: #7F7F7F;
    font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space:nowrap;

}

.sortDetail-item-info-renqi {
    width: 100%;
    height: 22px;
    line-height: 22px;
    font-size: 28rpx;
    color: black;
    font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
    text-overflow: ellipsis;
}

.red {
    color: #b93321;
}

.default {
    color: #919191;
}